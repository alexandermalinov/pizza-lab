<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.example.pizzalab.vo.createpizza.CreatePizzaUiModel" />

        <variable
            name="pizzaModel"
            type="com.example.pizzalab.vo.createpizza.PizzaUiModel" />

        <variable
            name="presenter"
            type="com.example.pizzalab.ui.createpizza.CreatePizzaPresenter" />

        <import type="com.example.pizzalab.R" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:paddingHorizontal="@dimen/margin_medium"
            android:paddingTop="@dimen/margin_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--<CheckBox
                    android:id="@+id/icon_favourite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/ic_like_outlined"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />-->

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="@string/welcome_to_lab"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xx_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/image_pizza"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:src="@drawable/pizza_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <TextView
                    android:id="@+id/textview_delivery_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="Delivery Cost"
                    app:layout_constraintEnd_toStartOf="@+id/view"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image_pizza" />

                <View
                    android:id="@+id/view"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:background="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/chip_free_delivery"
                    app:layout_constraintEnd_toStartOf="@+id/textview_price"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/textview_delivery_cost"
                    app:layout_constraintTop_toTopOf="@+id/textview_delivery_cost" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_free_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_medium"
                    android:text="@string/free"
                    app:chipBackgroundColor="@color/white"
                    app:chipIcon="@drawable/ic_scooter"
                    app:layout_constraintEnd_toEndOf="@+id/textview_delivery_cost"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="@+id/textview_delivery_cost"
                    app:layout_constraintTop_toBottomOf="@+id/textview_delivery_cost" />

                <TextView
                    android:id="@+id/textview_delivery_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="Delivery Time"
                    app:layout_constraintBottom_toBottomOf="@+id/textview_price"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/view_divider_time_price"
                    app:layout_constraintTop_toTopOf="@+id/textview_price" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_delivery_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_medium"
                    android:text="@string/delivery_time"
                    app:chipBackgroundColor="@color/white"
                    app:chipIcon="@drawable/ic_clock"
                    app:layout_constraintEnd_toEndOf="@+id/textview_delivery_time"
                    app:layout_constraintStart_toStartOf="@+id/textview_delivery_time"
                    app:layout_constraintTop_toTopOf="@+id/chip_free_delivery" />

                <View
                    android:id="@+id/view_divider_time_price"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:background="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/chip_delivery_time"
                    app:layout_constraintEnd_toStartOf="@+id/textview_delivery_time"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/textview_price"
                    app:layout_constraintTop_toTopOf="@+id/textview_delivery_time" />

                <TextView
                    android:id="@+id/textview_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="Price"
                    app:layout_constraintBottom_toBottomOf="@+id/textview_delivery_cost"
                    app:layout_constraintEnd_toStartOf="@+id/view_divider_time_price"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/view"
                    app:layout_constraintTop_toTopOf="@+id/textview_delivery_cost" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium"
                    app:layout_constraintBottom_toBottomOf="@+id/chip_delivery_time"
                    app:layout_constraintEnd_toEndOf="@+id/textview_price"
                    app:layout_constraintStart_toStartOf="@+id/textview_price"
                    app:layout_constraintTop_toBottomOf="@+id/textview_price"
                    app:textPrice="@{pizzaModel.price}"
                    tools:text="$11.99" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="Sizes"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_x_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/chip_free_delivery" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_24cm"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onCheckedChanged="@{(switch, checked) -> presenter.onSizeClick(checked, `24`)}"
                    android:text="@string/twenty_four"
                    android:textColor="@color/black"
                    app:checkedIconEnabled="true"
                    app:chipBackgroundColor="@color/light_gray"
                    app:layout_constraintEnd_toStartOf="@+id/chip_32cm"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_32cm"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:onCheckedChanged="@{(switch, checked) -> presenter.onSizeClick(checked, `32`)}"
                    android:text="@string/thirty_two"
                    android:textColor="@color/black"
                    app:checkedIconEnabled="true"
                    app:chipBackgroundColor="@color/light_gray"
                    app:layout_constraintEnd_toStartOf="@+id/chip2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/chip_24cm"
                    app:layout_constraintTop_toTopOf="@+id/chip_24cm" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip2"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:onCheckedChanged="@{(switch, checked) -> presenter.onSizeClick(checked, `48`)}"
                    android:text="@string/forty_four"
                    android:textColor="@color/black"
                    app:checkedIconEnabled="true"
                    app:chipBackgroundColor="@color/light_gray"
                    app:layout_constraintStart_toEndOf="@+id/chip_32cm"
                    app:layout_constraintTop_toTopOf="@+id/chip_32cm" />

                <TextView
                    android:id="@+id/text_meat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="Meat"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_x_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/chip_24cm" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_meat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_meat"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_pizza_ingredient" />

                <TextView
                    android:id="@+id/text_vegetables"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="Vegetables"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_x_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerview_meat" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_vegetables"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_vegetables"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_pizza_ingredient" />

                <TextView
                    android:id="@+id/text_cheese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="Cheese"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_x_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerview_vegetables" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_cheese"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_cheese"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_pizza_ingredient" />

                <TextView
                    android:id="@+id/text_sauce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="Sauce"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_x_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerview_cheese" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_sauce"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_sauce"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_pizza_ingredient" />

                <TextView
                    android:id="@+id/text_spices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="Spices"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_x_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerview_sauce" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_spices"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_spices"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_pizza_ingredient" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/materialButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> presenter.onPurchaseClick()}"
            android:layout_marginBottom="@dimen/margin_medium"
            android:textSize="@dimen/text_medium"
            app:backgroundTint="@color/white"
            app:icon="@drawable/ic_shopping_cart_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>